.mission-item-info{padding: 20rpx 20rpx 20rpx 60rpx;}
.mission-item-info .cuIcon-timefill{margin-right: 20rpx;}
.mission-item-info .limit-time{color:var(--thumb-color);font-weight: bold;}
.mission-item-info .mission-price{color:var(--thumb-color);font-weight: bold;}
.get-order-btn{height:90rpx;line-height:90rpx;background: var(--thumb-color);color: white;border-radius: 10rpx;text-align: center;}
.mission-item+.mission-item{margin-top: 30rpx;}

