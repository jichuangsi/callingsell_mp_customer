@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

.title{margin:0 0 10rpx 20rpx;font-size:32rpx;color:#333;font-weight: bold;}
.page-view{padding-bottom: 100rpx;background: #F9F9F9;}
.head-view{padding-bottom:20rpx;background: var(--white);}
.head-view .avatar{padding:20rpx 30rpx;}
.head-view .cu-tag.badge{top:auto;bottom:-10rpx;left:auto;right:auto;}
.head-view .username{font-size:36rpx;color:#333;flex:10;margin-left:30rpx;}
.head-view .username .delivery-text{ padding: 0 10rpx; margin-left: 20rpx;font-size:28rpx; background: #FFB43D; border-radius: 10rpx;color:#fff;}
.head-view .dynamic{padding-top:10rpx;}
.head-view .dynamic view{font-size: 32rpx;color:#666;text-align:center;}
.head-view .dynamic text{font-size: 42rpx;color:#333333;font-weight: bold;}
/*content-view*/
.content-view{padding:30rpx 30rpx 0 30rpx;}
.content-view .cu-list.grid.no-border{padding-bottom: 0;}
.content-view .order,.content-view .server,.content-view .other{margin:0 auto 20rpx auto;padding:20rpx 0;width:690rpx;background: #fff;border-radius: 20rpx;}
.content-view .order{border-radius: 20rpx;}
/* .content-view .server{}
.content-view .other{} */
.cuIcon-message{position: relative;}
.cuIcon-message text {
  position: absolute;
  right: 0rpx;
  top:0rpx;
  background-color: crimson;
  color: #fff;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
}






