.screen-swiper {height: 564rpx;}
.title-view{padding: 30rpx;background:var(--white);}
.content-view{margin-top:20rpx;padding: 0 30rpx 160rpx 30rpx;background:var(--white);}
/*商品详情*/
.good-title{
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
  height: 96rpx;
  line-height: 48rpx;
  font-size: 32rpx;
  color:var(--black);
  font-weight: bold;
}
.good-sale{margin-right: 20rpx;}
.good-sale,.good-like{font-size: 22rpx;color:var(--hex-999999);}
.price-view{flex:2;}
.btn-view{flex:1;}
.real-price{font-size: 42rpx; font-weight: bold; color:var(--thumb-color);}
.market-price{font-size: 24rpx; color:var(--hex-999999);text-decoration: line-through;}
.discount-period{font-size: 22rpx;}
/* .like-btn text{}
.share-btn{} */
/* content-view */
.cu-form-group{padding:0;align-items: baseline;}
.cu-form-group+.cu-form-group {border-top: none;}
.cu-form-group .title {line-height: auto;}
.store-icon{width:80rpx;height:80rpx;}
.store-icon image{width:100%;height:100%;}
.store-title{margin-left: 30rpx;flex: 2;}
.title-text{font-size: 32rpx;font-weight:bold;color:var(--black);}
.store-rank{margin-top:10rpx;font-size: 22rpx;color:var(--hex-666666);}
.good-parameter,.good-info{margin-top:40rpx;}
.good-parameter .title,.good-info .title{margin-bottom:30rpx;font-size: 32rpx;font-weight: bold; color:var(--black);}
.good-parameter .grid view{line-height: 40rpx; font-size: 26rpx; color:var(--hex-666666);}

/*底部按钮*/
.bottom-btn-view{width: 690rpx;position: fixed;bottom:30rpx;left:30rpx;}
.bottom-btn{width:100%;}
.btn-info{flex:2;height: 98rpx; border-radius: 49rpx 0 0 49rpx;}
.phone,.collect{flex:1;height: 98rpx; padding-top: 16rpx;}
.phone view,.collect view,.add-cart{text-align:center;}
.right-border{
  width: 2rpx;
  height: 30rpx;
  background: #F5F5F5;
  border-radius: 1rpx;
}
.add-cart{flex: 2;}
.go-buy{flex: 1;height: 98rpx; text-align: center; line-height: 98rpx; border-radius: 0 49rpx 49rpx 0;font-size: 32rpx;font-weight:blod;color:var(--white);}
.btn-info .text-benefit{font-size: 22rpx;color:var(--hex-999999);}


/*规格modal*/
.spec-view{}
/*加入购物车按钮*/
.spec-view .spec-list{text-align: left;}
.spec-view .spec-head{margin-bottom:20rpx;font-size: 28rpx;color:var(--black);}
.spec-view .spec-item{padding:5rpx 10rpx;border: 1px solid var(--hex-999999);border-radius: 8rpx;font-size: 24rpx;color:var(--black);}
.spec-view .spec-item.cur{color:#C02C38;background: #FFE7E9;border: 1px solid #C02C38;}
.spec-view .spec-item+.spec-item{margin-left:20rpx;}
.spec-view .add-cart{background: var(--thumb-color);}

.action.align-baseline{align-items: baseline}
.solid-bottom::after { border-top: 1rpx solid rgba(0, 0, 0, 0.1); border-bottom: none;}