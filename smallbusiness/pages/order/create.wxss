.page-view{padding:30rpx 30rpx 150rpx 30rpx;}
.cu-list{border-radius: 10rpx;}
.select-address.menu>.cu-item {display: block;padding:20rpx 30rpx;height: 166rpx;}
.select-address.menu>.cu-item .content {font-size: 32rpx;font-weight: bold;color:var(--black);}
.tishi{font-size: 26rpx !important;color: var(--thumb-color) !important;}
.tibox{min-height: 100rpx !important;}

.select-address{}
.pay-type{}
.pay-type .type-text{font-size: 28rpx;color:var(--black);}

.order-goods{border-radius:10rpx;background: white;}
/*商店相关*/
.good-item .store{height: 62rpx;line-height: 62rpx;}
.good-item .storeName{flex: 6;font-size: 32rpx;color:var(--black);font-weight: bold;}
/*商品相关*/
.good-item .goods{margin: 10rpx 0 30rpx 0;}
.good-item .goodspec{flex: 7.2;position: relative;}
.goodspec .goodimg{float:left;width: 120rpx;height: 120rpx;margin-right: 26rpx;}
.goodspec .goodimg image{width:120rpx;height: 120rpx;}
.goodspec .goodimg:after{clear: both;}
.goodspec .title{color:#343434;font-size: 28rpx;font-weight: bold;}
.goodspec .spec{color:#9A9A9A;font-size: 22rpx;}
.goodspec .num{display: inline-block;position: absolute;bottom: 0;color:#9A9A9A;}
.goodspec .price{position: absolute;bottom: 0;right: 0;}
.goodspec .price text{font-weight: bold;}
.goodspec .price text:nth-child(1){color:#9A9A9A;margin-right: 20rpx;text-decoration: line-through;}
/* .goodspec .price text:nth-child(2){margin-right: 10px;} */
/*包装费、配送费、优惠相关*/
.list-item .otherFee{margin: 0 13rpx 0 57rpx;padding-bottom:30rpx;width: 580rpx;}
.list-item .otherFee{border-bottom:1rpx solid #f5f5f5;}
.otherFee .packing,.otherFee .delivery,.otherFee .newUser{height: 44rpx;}
.otherFee .packing view:nth-child(1){display: inline-block;color:#333333;font-size: 28rpx;}
.otherFee .packing view:nth-child(2){float:right;font-size: 32rpx;font-weight: bold;}
/* .otherFee .delivery{} */
.otherFee .delivery view:nth-child(1){display: inline-block;color:#333333;font-size: 28rpx;}
.otherFee .delivery view:nth-child(2){float:right;font-size: 32rpx;font-weight: bold;}
/* .otherFee .newUser{} */
.otherFee .newUser view:nth-child(1){display: inline-block;color:#333333;font-size: 28rpx;}
.otherFee .newUser view:nth-child(2){float:right;font-size: 32rpx;font-weight: bold;color:var(--thumb-color);}
/* 商品小计 */
.total-price{border-top:1rpx solid var(--hex-F5F5F5);text-align: right;}
.cost-text{font-size: 28rpx;color:#333;}
.total-cost{font-size: 30rpx;margin-left:30rpx;}
/* 备注 */
.remarks{padding:30rpx 20rpx 10rpx 20rpx; border-radius: 10rpx;}
.remarks-head{font-size: 34rpx;font-weight: bold;color: var(--black);}
.cu-form-group{padding:1rpx 0rpx;}
.remarks .cu-form-group {padding: 0rpx 0rpx;}
.remarks .cu-form-group textarea {margin: 22rpx 0 0rpx;max-height:130rpx!important;}
.limit-info{ padding: 10rpx 0; text-align:right; font-size: 28rpx; color:var(--hex-999999);}
.remarks-content{margin-top:10rpx;font-size: 28rpx;color:var(--black);}

/* 地址弹窗 */
.address-modal .cu-dialog{z-index:9999;max-height:900rpx;border-radius: 40rpx 40rpx 0rpx 0rpx!important;}
.address-modal .cu-bar .action:last-child { font-size: 32rpx;font-weight: bold;}
/* 地址item */
.address-modal .address-list scroll-view{height: 600rpx;}
.address-modal .list-item{height:140rpx;border-radius: 10rpx;padding-left:20rpx;}
.address-modal .list-item+.list-item{margin-top:20rpx;}
/* .address-modal .checkbox-view{ padding: 0 20rpx; } */
.address-modal .checkbox-view checkbox-group{ padding:50rpx 20rpx; }
.address-modal .address-view{padding: 23rpx 0; width: 540rpx; text-align: left;}
.address-modal .address-view .contact{text-align: left;font-size: 34rpx;font-weight: bold;color: var(--black);}
.address-modal .address-view .address{font-size: 28rpx;color: var(--black);}
.address-modal .edit-view{padding:40rpx 20rpx;font-size: 32rpx;}
.address-modal .btn-view{height: 88rpx;line-height:88rpx;width: 690rpx;background: var(--thumb-color);color:var(--white);text-align: center;border-radius:44rpx;}

/*底部按钮*/
.bottom-btn-view{width: 690rpx;position: fixed;z-index:98;bottom:30rpx;left:30rpx;}
.bottom-btn{width:100%;}
.info-cost{flex:2;height: 98rpx; border-radius: 49rpx 0 0 49rpx;}
.info-cost view{padding-left: 40rpx;font-size: 28rpx;color:var(--white);}
.text-cost .text-price{font-size:42rpx;color:var(--white);}
.go-pay{flex: 1;height: 98rpx; text-align: center; line-height: 98rpx; border-radius: 0 49rpx 49rpx 0;font-size: 32rpx;font-weight:blod;color:var(--white);}
.info-cost .text-benefit{font-size: 22rpx;color:var(--hex-999999);}
